<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


  <servlet>
    <servlet-name>TestServlet</servlet-name>
    <jsp-file>/index.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>TestServlet</servlet-name>
    <url-pattern>/test</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ExhibitServlet</servlet-name>
    <jsp-file>/WEB-INF/views/exhibits.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>ExhibitServlet</servlet-name>
    <url-pattern>/exhibits</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ExcursionsServlet</servlet-name>
    <jsp-file>/WEB-INF/views/excursions.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>ExcursionsServlet</servlet-name>
    <url-pattern>/excursions</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>EmployeesServlet</servlet-name>
    <jsp-file>/WEB-INF/views/employees.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>EmployeesServlet</servlet-name>
    <url-pattern>/employees</url-pattern>
  </servlet-mapping>
</web-app>